<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tic Tac Toe</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #fff;
      }

      .game {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .board {
        display: grid;
        grid-template-columns: repeat(3, 80px);
        grid-template-rows: repeat(3, 80px);
        gap: 4px;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
      }

      .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 3rem;
        color: #fff;
        cursor: pointer;
        background-color: #72aee6;
        transition: background-color 0.3s;
      }

      .message {
        margin-top: 20px;
        font-size: 1.2rem;
        font-weight: bold;
      }

      .reset-btn {
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        background-color: #f0c33c;
        color: #fff;
        transition: background-color 0.3s;
      }
    </style>
  </head>
  <body>
    <div class="game">
      <div class="board" id="board">
        <div class="cell" onclick="placeMark(0)"></div>
        <div class="cell" onclick="placeMark(1)"></div>
        <div class="cell" onclick="placeMark(2)"></div>
        <div class="cell" onclick="placeMark(3)"></div>
        <div class="cell" onclick="placeMark(4)"></div>
        <div class="cell" onclick="placeMark(5)"></div>
        <div class="cell" onclick="placeMark(6)"></div>
        <div class="cell" onclick="placeMark(7)"></div>
        <div class="cell" onclick="placeMark(8)"></div>
      </div>
      <div class="message" id="message"></div>
      <button class="reset-btn" onclick="resetGame()">Reset Game</button>
    </div>

    <script>
      let currentPlayer = "X";
      let board = ["", "", "", "", "", "", "", "", ""];
      let gameActive = true;

      const winningConditions = [
        [0, 1, 2],
        [3, 4, 5],
        [6, 7, 8],
        [0, 3, 6],
        [1, 4, 7],
        [2, 5, 8],
        [0, 4, 8],
        [2, 4, 6],
      ];

      const boardElements = document.querySelectorAll(".cell");
      const messageElement = document.getElementById("message");

      function placeMark(index) {
        if (gameActive && board[index] === "") {
          board[index] = currentPlayer;
          boardElements[index].textContent = currentPlayer;
          checkWin();
          togglePlayer();
        }
      }

      function togglePlayer() {
        currentPlayer = currentPlayer === "X" ? "O" : "X";
      }

      function checkWin() {
        for (let condition of winningConditions) {
          const [a, b, c] = condition;
          if (
            board[a] !== "" &&
            board[a] === board[b] &&
            board[a] === board[c]
          ) {
            gameActive = false;
            highlightWin(condition);
            messageElement.textContent = ${currentPlayer} wins!;
            return;
          }
        }
        if (!board.includes("")) {
          gameActive = false;
          messageElement.textContent = It's a draw!;
        }
      }

      function highlightWin(condition) {
        const [a, b, c] = condition;
        boardElements[a].style.backgroundColor = "#68de73";
        boardElements[b].style.backgroundColor = "#68de73";
        boardElements[c].style.backgroundColor = "#68de73";
      }

      function resetGame() {
        currentPlayer = "X";
        board = ["", "", "", "", "", "", "", "", ""];
        gameActive = true;
        messageElement.textContent = "";
        boardElements.forEach((cell) => {
          cell.textContent = "";
          cell.style.backgroundColor = "#72aee6";
        });
      }
    </script>
  </body>
</html>
